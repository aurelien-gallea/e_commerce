{% extends 'base.html.twig' %}

{% block title %}Hello CommandeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>
    {% if panier %}
    {% for key, p in panier %}
    <p>{{ p.produit.designation }} quantité : {{ p.quantite }} <a href="{{ path('app_panier_delete', {'key': key}) }}">Supprimer</a></p>
    {% endfor %}

        <a class="btn btn-secondary" href="{{path('app_commande_confirm')}}">Valider la commande</a>
    {% else %}
    <p>Votre panier est vide</p>
    {% endif %} 
</div>
{% endblock %}
